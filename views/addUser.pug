extends layout

block content
	div(class="flex items-center justify-center min-h-screen text-gray-300")
			div(class="w-1/2 px-8 py-6 mt-4 text-left rounded-lg shadow-lg bg-gray-800 bg-opacity-30 shadow-lg text-yellow-300")
				h3(class="text-2xl font-bold text-center") Sign Up
				form(action='/users' method='post')
					div()
						label(for="username" class="block"): b Username
						input(type="email" placeholder="email" name="username" class="w-full px-4 py-2 mt-2 border rounded-md focus:outline-none focus:ring-1 focus:ring-blue-600 text-gray-800")
					div(class="mt-4")
						label(type="password" class="block"): b Password
						textarea(type="password" name="password" placeholder="password" class="w-full px-4 py-2 mt-2 border rounded-md focus:outline-none focus:ring-1 focus:ring-blue-600 text-gray-800")
					div(class="flex items-baseline justify-between")
						button(type="submit" id="createBtn" class="w-full px-6 py-2 mt-4 rounded-lg hover:bg-pink-600") Submit
