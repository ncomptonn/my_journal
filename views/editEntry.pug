extends layout

block content
    form(action="/entries/edit" method="post")
        div(class="flex items-center justify-center min-h-screen text-yellow-300")
            div(class="w-1/3 px-8 py-6 mt-4 text-left rounded-lg shadow-lg bg-gray-800 bg-opacity-30 shadow-lg")
                h3(class="text-2xl font-bold text-center") Edit Entry
                div()
                    label(for="mood" class="block"): b Mood
                    input(type="mood" value=e.mood name="mood" class="w-full px-4 py-2 mt-2 border rounded-md focus:outline-none focus:ring-1 focus:ring-blue-600 text-gray-700")
                div(class="mt-4")
                    label(type="entry" class="block"): b Entry
                    textarea(type="entry" name="entry" class="w-full px-4 py-2 mt-2 border rounded-md focus:outline-none focus:ring-1 focus:ring-blue-600 text-gray-700") #{e.entry}

                input(type="hidden" name="location" id="location" value=e.location)

                input(type="hidden" name="weather" id="weather" value=e.weather)

                input(type="hidden" name="entryId" id="entryId" value=e._id)

                div(class="flex items-baseline justify-between")
                    button(type="submit" id="submitBtn" class="w-full px-6 py-2 mt-4 text-white rounded-lg hover:bg-pink-600") Save

                div(class="flex items-baseline justify-between")
                    a(href="/journal" class="w-full px-6 py-2 mt-4 text-white rounded-lg hover:bg-pink-600 flex flex-row justify-center") Cancel